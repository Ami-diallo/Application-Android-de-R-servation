<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".Favoris">

    <ImageButton
        android:id="@+id/imageButton4"
        android:onClick="showProfile"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:background="@color/lightBlue"
        android:backgroundTint="@color/lightBlue"
        android:backgroundTintMode="add"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_person_24" />

    <ImageButton
        android:id="@+id/right_sidebar"
        android:layout_width="38dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/lightBlue"
        android:onClick="ShowPopup"
        android:scaleType="fitXY"
        android:src="@drawable/ic_sidebar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="819dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginTop="54dp"
        android:text="Vos Favoris"
        android:textColor="#0C1753"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="132dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="53dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_picture" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="131dp"
        android:layout_height="132dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="48dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/ic_picture" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="131dp"
        android:layout_height="132dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="48dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_picture" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="131dp"
        android:layout_height="132dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="49dp"
        android:background="@color/lightGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/ic_picture" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="19dp"
        android:text="Apprendre à dessiner"
        android:textColor="#0C1753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="19dp"
        android:text="Apprendre l'anglais"
        android:textColor="#0C1753"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="19dp"
        android:text="Apprendre les maths"
        android:textColor="#0C1753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="34dp"
        android:text="Apprendre à parler"
        android:textColor="#0C1753"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>